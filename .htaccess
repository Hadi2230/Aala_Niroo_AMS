# تنظیمات Apache برای سیستم مدیریت دارایی‌ها

# فعال‌سازی rewrite engine
RewriteEngine On

# تنظیمات امنیتی
Options -Indexes
ServerSignature Off

# مجاز کردن اجرای فایل‌های PHP
<Files "*.php">
    Order allow,deny
    Allow from all
</Files>

# مجاز کردن دسترسی به فایل‌های CSS و JS
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    Order allow,deny
    Allow from all
</Files>

# مجاز کردن دسترسی به فایل‌های JSON
<FilesMatch "\.json$">
    Order allow,deny
    Allow from all
</Files>

# تنظیمات امنیتی برای پوشه‌های حساس
<Directory "logs">
    Order deny,allow
    Deny from all
</Directory>

<Directory "config">
    Order deny,allow
    Deny from all
</Directory>

# مجاز کردن دسترسی به فایل‌های setup
<Files "setup_database.php">
    Order allow,deny
    Allow from all
</Files>

<Files "fix_surveys_table.php">
    Order allow,deny
    Allow from all
</Files>

# تنظیمات charset
AddDefaultCharset UTF-8

# تنظیمات cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
</IfModule>

# تنظیمات PHP
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# تنظیمات امنیتی اضافی
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# مجاز کردن دسترسی به فایل‌های اصلی
<Files "index.php">
    Order allow,deny
    Allow from all
</Files>

<Files "login.php">
    Order allow,deny
    Allow from all
</Files>

<Files "dashboard.php">
    Order allow,deny
    Allow from all
</Files>

# مجاز کردن دسترسی به فایل‌های مدیریت
<FilesMatch "^(customers|assets|suppliers|tickets|survey|messages|users)\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>

# مجاز کردن دسترسی به فایل‌های API
<FilesMatch "^(api|ajax)_.*\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>